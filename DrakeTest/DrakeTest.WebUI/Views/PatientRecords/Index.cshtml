@model IEnumerable<DrakeTest.Core.Models.PatientRecords>

@{
    ViewBag.Title = "Index";
}





    <div style="margin-left:15px;margin-bottom:10px;"><a href="@Url.Action("Create","PatientRecords")"><button type="button" class="btn btn-primary">Create New</button></a></div>

@foreach (var item in Model)
{

<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <div class="thumbnail">
        <div class="caption">
            <div class='col-lg-12'>
                <a href="@Url.Action("Edit", "PatientRecords", new { id = item.Id })"><span class="glyphicon glyphicon-edit">Edit</span>
                <a href="@Url.Action("Delete", "PatientRecords", new { id = item.Id })"><span class="glyphicon glyphicon-trash pull-right text-primary">Delete</span></a>
            </div>
            <div class='col-lg-12 well well-add-card'>
                @{
                    var weight = item.weight;
                    var height = item.height;

                    var BMI = (weight * 703) / (height * height);
                    BMI = Math.Round(BMI, 2);
                    var BMIDESC = "";
                    if (BMI < 18.5)
                    {
                        BMIDESC = "Too thin.";
                    }
                    if (BMI > 18.5 && BMI < 25)
                    {
                        BMIDESC = "Healthy.";
                    }
                    if (BMI > 25)
                    {
                        BMIDESC = "Overweight.";
                    }
                }
                <h4>BMI: @BMI  + @BMIDESC</h4>
            </div>
            <div class='col-lg-12'>
              
                <p>Height: @Html.DisplayFor(modelItem => item.height)</p>
                <p>Weight:@Html.DisplayFor(modelItem => item.weight)</p>
                <p>Test: @Html.DisplayFor(modelItem => item.test)</p>
                <p class"text-muted">Created at: @Html.DisplayFor(modelItem => item.CreatedAt)</p>
            </div>
           
            <button type="button" class="btn btn-primary btn-xs btn-update btn-add-card" style="visibility: hidden;"></button>
           
        </div>
    </div>
</div>
  

}
<div class=row></div>
<hr/>
<div class="container">
    <div class="text-center">
        <h2 style="text-align:left;">BMI Table</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">BMI Index</th>
                        <th class="text-center">BMI Description</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>< 18</td>
                        <td>Too thin.</td>

                    </tr>
                    <tr>
                        <td>> 18.5 && < 25</td>
                        <td>Healthy</td>

                    </tr>
                    <tr>
                        <td>BMI > 25</td>
                        <td>Overweight</td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>




