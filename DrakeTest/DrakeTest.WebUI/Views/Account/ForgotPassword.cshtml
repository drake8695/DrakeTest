@model DrakeTest.WebUI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">@ViewBag.Title</div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <h4>Forgot your password?</h4>
                    <p>Enter your email address and we will send you instructions on how to reset your password.</p>
                </div>
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-label-group">


                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.LabelFor(m => m.Email, new { })

                </div>
            </div>
                <div class="form-group">
                    
                        <input type="submit" class="btn btn-primary btn-block" value="Email Link" />
                    
                </div>
                <div class="text-center">
                    <p>
                        @Html.ActionLink("Register An Account", "Register")
                    </p>

                    <p>
                        @Html.ActionLink("Login page", "Login")
                    </p>
                </div>
                }

            </div>
        </div>
    </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
    </body>
